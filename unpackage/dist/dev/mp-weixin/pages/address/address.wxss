.address-container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  margin-top: 44px;
  position: relative;
}
.nav-header {
  display: flex;
  align-items: center;
  height: 44px;
  background-color: #ffffff;
  padding: 0 15px;
  border-bottom: 1px solid #f0f0f0;
  position: fixed;
  top: 44px;
  left: 0;
  right: 0;
  z-index: 100;
}
.nav-header .back-btn {
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.nav-header .title {
  flex: 1;
  text-align: center;
  font-size: 16px;
  font-weight: 500;
}
.nav-header .right-btns {
  display: flex;
  align-items: center;
  gap: 15px;
}
.scroll-content {
  flex: 1;
  height: calc(100vh - 140px);
  margin-top: 44px;
  padding-bottom: 20px;
}
.default-location {
  display: flex;
  align-items: center;
  padding: 15px;
  background-color: #ffffff;
  margin-bottom: 10px;
}
.default-location .location-icon {
  margin-right: 10px;
}
.default-location .location-text {
  font-size: 14px;
  color: #333;
}
.address-list {
  padding: 0 15px;
  padding-bottom: 80px;
}
.address-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15px;
  background-color: #f2f1f1;
  border-radius: 8px;
  margin-bottom: 10px;
}
.address-item .address-info {
  flex: 1;
}
.address-item .address-title {
  font-size: 14px;
  color: #333;
  margin-bottom: 5px;
}
.address-item .address-user {
  font-size: 13px;
  color: #999;
}
.address-item .address-user text {
  margin-right: 10px;
}
.address-item .edit-btn {
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 50px 0;
}
.empty-state image {
  width: 120px;
  height: 120px;
  margin-bottom: 15px;
}
.empty-state text {
  font-size: 14px;
  color: #999;
}
.add-address-btn {
  height: 44px;
  line-height: 44px;
  text-align: center;
  background-color: #0066ff;
  color: #ffffff;
  border-radius: 22px;
  font-size: 16px;
  position: fixed;
  left: 15px;
  right: 15px;
  bottom: 20px;
  z-index: 10;
}
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 50px 0;
}
.loading-state text {
  font-size: 14px;
  color: #999;
  margin-top: 15px;
}