.login-container {
  padding: 0 30rpx;
  height: 100vh;
  background-color: #ffffff;
}
.login-container .header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  position: relative;
}
.login-container .header .back-btn {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
}
.login-container .header .back-btn .iconfont {
  font-size: 40rpx;
}
.login-container .header .title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 36rpx;
  font-weight: 500;
}
.login-container .header .right-icons {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.login-container .header .right-icons .iconfont {
  font-size: 40rpx;
}
.login-container .login-image {
  display: flex;
  justify-content: center;
  margin: 60rpx 0;
}
.login-container .login-image image {
  width: 400rpx;
  height: 300rpx;
}
.login-container .login-slogan {
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  margin-bottom: 60rpx;
}
.login-container .login-form .input-group {
  height: 100rpx;
  border: 1px solid #e5e5e5;
  border-radius: 50rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}
.login-container .login-form .input-group input {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
}
.login-container .login-form .code-group {
  display: flex;
  align-items: center;
  padding-right: 10rpx;
}
.login-container .login-form .code-group .code-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #7facfa;
  color: #fff;
  font-size: 26rpx;
  border-radius: 40rpx;
}
.login-container .login-form .code-group .code-btn.disabled {
  background-color: #f5f5f5;
  color: #999;
}
.login-container .login-form .login-btn {
  height: 100rpx;
  background-color: #7facfa;
  border-radius: 50rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.login-container .skip-login {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin-top: 40rpx;
}
.login-container .agreement {
  position: fixed;
  bottom: 50rpx;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}
.login-container .agreement checkbox {
  transform: scale(0.7);
  margin-right: 5rpx;
}
.login-container .agreement .agreement-link {
  color: #7facfa;
}