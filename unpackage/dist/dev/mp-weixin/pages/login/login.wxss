.login-container {
  padding: 0 30rpx;
  height: 100vh;
  background-color: #ffffff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.login-container .login-image {
  display: flex;
  justify-content: center;
  margin-top: 200rpx;
  margin-bottom: 40rpx;
}
.login-container .login-image image {
  width: 300rpx;
  height: 220rpx;
}
.login-container .login-slogan {
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  margin-bottom: 50rpx;
}
.login-container .login-form .form-container {
  width: 100%;
  margin-bottom: 30rpx;
}
.login-container .login-form .form-container .form-item {
  margin-bottom: 20rpx;
}
.login-container .login-form .form-container .form-item .label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}
.login-container .login-form .form-container .form-item .input-box {
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
}
.login-container .login-form .form-container .form-item .input-box .input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
}
.login-container .login-form .form-container .code-box {
  display: flex;
  justify-content: space-between;
}
.login-container .login-form .form-container .code-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: #007aff;
  text-align: center;
  border-radius: 8rpx;
  padding: 0;
  margin: 0;
}
.login-container .login-form .form-container .code-btn[disabled] {
  background-color: #ccc;
}
.login-container .login-form .login-btn {
  height: 90rpx;
  background-color: #007aff;
  border-radius: 45rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.login-container .skip-login {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin-top: 30rpx;
}
.login-container .agreement {
  position: absolute;
  bottom: 50rpx;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}
.login-container .agreement .checkbox-wrapper {
  display: flex;
  align-items: center;
  margin-right: 5rpx;
}
.login-container .agreement .checkbox-wrapper .checkbox {
  transform: scale(0.7);
  margin-right: 5rpx;
}
.login-container .agreement .agreement-text {
  font-size: 24rpx;
  color: #666;
}
.login-container .agreement .agreement-link {
  color: #007aff;
  margin-right: 5rpx;
}
.login-container .debug-info {
  margin-top: 20rpx;
  padding: 10rpx;
  border: 1px dashed #ccc;
  font-size: 24rpx;
  color: #666;
  display: flex;
  flex-direction: column;
}